<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Feedback</title>
    <link rel="stylesheet" href="/css/manager.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <header>
        Feedback
    </header>

    <div class="container">
        <div class="left">
            <div class="box1">
                <img id="station_logo" src="/images/vintage_logo.jpg" alt="">
            </div>


            <div class="box2">
                <div class="login-box">
                    <h2>Login</h2>
                    <form>
                        <div class="textbox">
                            <input type="text" placeholder="Username" name="username" required>
                        </div>
                        <div class="textbox">
                            <input type="password" placeholder="Password" name="password" required>
                        </div>
                        <input type="submit" class="btn" value="Login">
                    </form>
                </div>
            </div>

            <div class="box3">
                <div id="menuOptions">
                    <% menuOptions.forEach(option=> { %>
                        <a href="<%= option.href %>" class="custom-link">
                            <i class="<%= option.icon %>"></i>
                            <%= option.text %>
                        </a>
                        <% }); %>
                </div>
                <form id="search" action="/search" method="get" style="display: flex;">
                    <input type="text" name="query" placeholder="Search..." style="flex: 1;">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>


        </div>
        <div class="right">
            <div class="box4">
                <div class="username-container">
                    Username <i id="user" class="fa-solid fa-user" style="color: #ffffff;"></i>
                </div>
                <h2 id="Recipient">Recipient</h2>
                <button id="DjButton" type="button" onclick="toggleColor(this, 'ProducerButton');">Dj</button>
                <button id="ProducerButton" type="button" onclick="toggleColor(this, 'DjButton');">Producer</button>
                <textarea placeholder="Write your feedback here..." required></textarea>
                <button id="sendButton" type="button">Send Feedback</button>
            </div>
        </div>
    </div>


    <!-- Footer information -->
    <footer>
        <div id="copyright">
            Copyright <i class="fa-solid fa-copyright"></i> 2023
        </div>
        <div id="socialmedia">
            Follow us on
            <a href="https://www.instagram.com" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-instagram" style="color: #ffffff;"></i>
            </a>
            <a href="https://www.facebook.com" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-facebook-f" style="color: #ffffff;"></i>
            </a>
        </div>
    </footer>


    // Script for the feedback page
    <script src="/js/feedback.js"></script>
</body>

</html>